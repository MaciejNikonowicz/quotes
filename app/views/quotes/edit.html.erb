<h1>Edit quote</h1>
<!-- form for editing selected quotation -->
<%= form_for :quote, url: quote_path(@quote), method: :patch do |f| %>
    <% if @quote.errors.any? %>
        <% @quote.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger"><%= msg %></div>
        <% end %>
    <% end %>
    <p>
        <%= f.label :title %><br>
        <%= f.text_field(:title, {:class=>'form-control'}) %>
    </p>

    <p>
        <%= f.label :body %><br>
        <%= f.text_area(:body, {:class=>'form-control'}) %>
    </p>

    <p>
        <%= f.submit(:class=>'btn btn-primary') %>
    </p>
<% end %>
<!-- end form -->